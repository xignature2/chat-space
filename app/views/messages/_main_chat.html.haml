.chat-main
  .header-right
    .header-right__left-box
      %h2.header-right__left-box__current-group 
        abc
          
      .header-right__left-box__ul
        Memberï¼š
        %li.main-header__left-box__member-list__member
          - @group.users.each do |user|
            = user.name
    
    .header-right__edit
      = link_to "Edit", edit_group_path(@group), class: "header-right__edit__btn"
     



  .right-content
    = render @messages
     


  .bottom-content
    = form_for [@group, @message] do |f|
      .form__input-box
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        = f.label :image, class: 'form__input-box__image' do
          = icon('far', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'


